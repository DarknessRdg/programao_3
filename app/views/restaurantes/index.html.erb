<h1>Restaurantes</h1>
<p>
  Estou no controller de Restaurantes!
</p>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Especialidade</th>
      <th>Mostrar</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurantes.each_with_index do |restaurante, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= restaurante.nome %></td>
        <td><%= restaurante.endereco %></td>
        <td><%= restaurante.especialidade %></td>
        <td>
          <%= link_to 'Mostrar', action: 'show', id: restaurante %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

